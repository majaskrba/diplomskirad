@model diplomskirad.Models.Parametar

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Izmijeni Parametar</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ParametarID" />
            <div class="form-group">
                <label asp-for="Vrijednost" class="control-label"></label>
                <input asp-for="Vrijednost" class="form-control" />
                <span asp-validation-for="Vrijednost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NalazID" class="control-label"></label>
                <select asp-for="NalazID" class="form-control" asp-items="ViewBag.NalazID"></select>
                <span asp-validation-for="NalazID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SifarnikID" class="control-label"></label>
                <select asp-for="SifarnikID" class="form-control" asp-items="ViewBag.SifarnikID"></select>
                <span asp-validation-for="SifarnikID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sacuvaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"  style="font-family:cursive">Vrati se</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
