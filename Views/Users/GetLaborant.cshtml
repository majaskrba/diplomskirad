@model IEnumerable<diplomskirad.Models.UserRoles>

<p style="font-size: 25px; font-family: cursive">
    Spisak laboranata
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrojTelefona)
            </th>
            <th>
                Uloga
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrojTelefona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Roles)
            </td>
            <td>
                @if (User.IsInRole("Administrator"))
                {


                <a asp-action="Manage" asp-route-userId="@item.KorisnickiID">Promijeni ulogu</a>
                    <a asp-action="Delete" asp-controller="Users" asp-route-id="@item.KorisnickiID">Obrisi</a>
                }


            </td>
        </tr>
}
    </tbody>
</table>
