@model diplomskirad.Models.UserRoles

<h3>Da li ste sigurni da zelite obrisati?</h3>
<div>
    
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrojTelefona)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrojTelefona)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Roles)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Roles)
        </dd>
    </dl>
    <br />
    <a asp-controller="Users" asp-action="Delete2" class="btn btn-danger" asp-route-id="@Model.KorisnickiID">Obrisi</a>
    @if (Model.Roles[0] == "Laborant")
    {
        <a asp-action="GetLaborant">Vrati se</a>
    }
    else
    {
        <a asp-action="GetUsers">Vrati se</a>
    }

</div>
