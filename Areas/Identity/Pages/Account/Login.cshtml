@page
@model LoginModel

@{
    ViewData["Title"] = "";
}

<style>
    body {
       
        background-image: url('/lib/slike/log.jpg');
       
        background-size: 1500px 750px;
    }

    a {
        text-decoration: none !important;
    }

    h1, h2, h3 {
        font-family: cursive;
    }


    #sredina2 {
        font-family: cursive;
        font-style: italic;
        opacity: 0.8;
        border-radius: 5px;
        padding: 3% 2%;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        box-sizing: border-box;
        background-color: lightblue;
        color: darkblue;
    }
    

</style>



<h1>@ViewData["Title"]</h1>
<div class="row">
    
        <div class="col-md-4" id="sredina2">
          
                <section >
                    <form id="account" method="post">
                        @* <h4>Use a local account to log in.</h4>*@
                      
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email" >Email</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password" >Lozinka</label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger" ></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe"  >
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <button type="submit" style="font-family:cursive;font-size:15px;color:darkblue;" class="btn btn-light" >Prijavi se</button>
                        </div>
                        <div class="form-group" style="font-family:cursive">
                            <p>
                                <a   id="forgot-password" asp-page="./ForgotPassword">Zaboravili ste lozinku?</a>
                            </p>
                            <p>
                                <a  asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registruj se kao novi korisnik</a>
                            </p>
                            <p>
                                <a   id="resend-confirmation" asp-page="./ResendEmailConfirmation">Posaljite potvrdu mejlom</a>
                            </p>
                        </div>
                    </form>
                </section>
     
        
        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
</div>
</div>