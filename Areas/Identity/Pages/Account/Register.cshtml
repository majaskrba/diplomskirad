@page
@model RegisterModel
@{
    ViewData["Title"] = "";
}
<style>
    body {
        background-image: url('/lib/slike/novareg.jpg');
        background-size: 1600px 650px;
    }

    a {
        text-decoration: none !important;
    }

    h1, h2, h3 {
        font-family: cursive;
    }


    #sredina2 {
        font-family: cursive;
        font-style: italic;
        opacity: 0.8;
        border-radius: 5px;
        padding: 3% 2%;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        box-sizing: border-box;
        background-color: lightblue;
        color: darkblue ;
    }
</style>


<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4" id="sredina2">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Napravi novi nalog</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Lozinka</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Potvrdi lozinku</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" style="color:darkblue;font-family:cursive;font-size:15px" class="btn btn-light">Registruj se</button>
        </form>
    </div>
