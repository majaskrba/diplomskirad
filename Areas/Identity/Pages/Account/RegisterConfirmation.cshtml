@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Potvrda registracije";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
    <p>
        Ova aplikacija trenutno nema registrovanog stvarnog posiljaoca e-maila, pogledajte<a href="https://aka.ms/aspaccountconf"> ovi dokumenti</a>
        kako da konfigurisete pravog posiljaoca e-maila.
        Obicno bi ovo bilo na e-mail: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Kliknite ovdje da potvrdite svoj nalog</a>
    </p>
    }
    else
    {
<p>

    Provjerite svoju e-mail da potvrdite svoj racun.
</p>
    }
}
